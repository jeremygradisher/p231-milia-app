<%- model_class = Project -%>
<div class="page-header">
  <h1>Project</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:zip) %></th>
      <th><%= model_class.human_attribute_name(:project_type) %></th>
      <th><%= model_class.human_attribute_name(:square_footage) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:owner) %></th>
      <th><%= model_class.human_attribute_name(:tenant_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.id, tenant_project_path(project, tenant_id: @tenant.id) %></td>
        <td><%= link_to project.name, tenant_project_path(project, tenant_id: @tenant.id) %></td>
        <td><%= project.address %></td>
        <td><%= project.city %></td>
        <td><%= project.state %></td>
        <td><%= project.zip %></td>
        <td><%= project.project_type %></td>
        <td><%= project.square_footage %></td>
        <td><%= project.description %></td>
        <td><%= project.owner %></td>
        <td><%= project.tenant_id %></td>
        <td><%=l project.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tenant_project_path(project, tenant_id: @tenant.id), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Edit Users', users_tenant_project_path(project, tenant_id: @tenant.id), 
                        :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tenant_project_path(project, tenant_id: @tenant.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

