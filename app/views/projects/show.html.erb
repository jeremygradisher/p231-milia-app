<%- model_class = Project -%>
<div class="page-header">
    <h3><%= @project.name %></h3>
    <h3><small>Organization - <%= tenant_name @project.tenant_id %></small></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @project.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @project.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @project.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @project.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
  <dd><%= @project.zip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_type) %>:</strong></dt>
  <dd><%= @project.project_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:square_footage) %>:</strong></dt>
  <dd><%= @project.square_footage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @project.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner) %>:</strong></dt>
  <dd><%= @project.owner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tenant_id) %>:</strong></dt>
  <dd><%= @project.tenant_id %></dd>
</dl>






<%= link_to '< Back to Organization Home', root_path, :class => 'btn btn-default' %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
edit_tenant_project_path(project: @project, tenant: @project.tenant_id), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
tenant_project_path(@project, @project.tenant_id),
:method => 'delete',
:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm",
:default => 'Are you sure?')) },
:class => 'btn btn-danger' %>



